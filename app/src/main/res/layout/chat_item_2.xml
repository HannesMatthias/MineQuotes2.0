<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/message_sender2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/message_chat2"
            android:layout_marginStart="12dp"
            android:layout_marginTop="6dp"
            android:layout_weight="1"
            android:text="Hannes"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/message_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/message_chat2"
            android:layout_marginStart="@+id/message_chat2"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="12dp"
            android:text="2018-07-05 20:00:05"
            android:textSize="15dp" />

        <com.github.library.bubbleview.BubbleTextView
            android:id="@+id/message_chat2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/message_sender2"
            android:layout_marginTop="6dp"
            android:layout_weight="0.5"
            android:padding="5dp"

            android:text="ore et dolore magna aliquyam erat,dolores et ea rebum. Stet clita kasd gubergren"
            android:textColor="@android:color/white"
            app:angle="8dp"
            app:arrowCenter="true"
            app:arrowHeight="15dp"
            app:arrowLocation="left"
            app:arrowWidth="8dp"
            app:bubbleColor="#7EC0EE" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8">
    </RelativeLayout>


</LinearLayout>