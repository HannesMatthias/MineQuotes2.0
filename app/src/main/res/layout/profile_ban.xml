<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/playerprofile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:layout_editor_absoluteY="81dp"

    >

    <ImageView
        android:id="@+id/skin"
        android:layout_width="120px"
        android:layout_height="270px"
        android:layout_alignParentTop="true"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/lb_profilename"/>

    <TextView
        android:id="@+id/lb_profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bannedPlayerIP"
        android:layout_alignStart="@+id/bannedPlayerIPlabel"
        android:layout_marginBottom="13dp"
        android:text="Spielername:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/profilename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lb_profilename"
        android:layout_alignBottom="@+id/lb_profilename"
        android:layout_toEndOf="@+id/lb_profilename"
        android:layout_marginLeft="20dp"
        android:text="Hannes__99"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/bannedPlayerIPlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lb_banReason"
        android:layout_centerVertical="true"
        android:text="Spieler-IP: "
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/bannedPlayerIP"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_toEndOf="@id/bannedPlayerIPlabel"
        android:layout_alignBottom="@+id/bannedPlayerIPlabel"
        android:layout_alignStart="@+id/profilename"/>


    <TextView
        android:id="@+id/lb_banReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lb_banType"
        android:layout_below="@+id/bannedPlayerIP"
        android:layout_marginTop="28dp"
        android:text="Bann Grund: "
        android:textSize="25sp" />

    <TextView
        android:id="@+id/banReason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lb_banType"
        android:layout_alignStart="@+id/profilename"
        android:text="griefing"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/lb_banType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lb_banReason"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:text="Art des Bans: "
        android:textSize="25sp" />

    <TextView
        android:id="@+id/banType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lb_banType"
        android:layout_alignBottom="@+id/lb_banType"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/skin"
        android:layout_alignStart="@+id/profilename"
        android:text="temporÃ¤r"
        android:textSize="25sp" />
</RelativeLayout>